{
  "tasks": {
    "dev": "deno run --allow-env --allow-net --allow-read --watch main.ts",
    "start": "deno run --allow-env --allow-net --allow-read main.ts",
    "build": "deno run --allow-env --allow-net --allow-read build.ts",
    "test": "deno test --allow-env --allow-net",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "imports": {
    "@std/": "https://deno.land/std@0.208.0/",
    "react": "https://esm.sh/react@18.2.0",
    "react-dom": "https://esm.sh/react-dom@18.2.0",
    "react-dom/client": "https://esm.sh/react-dom@18.2.0/client",
    "react-router-dom": "https://esm.sh/react-router-dom@6.21.3",
    "@supabase/supabase-js": "https://esm.sh/@supabase/supabase-js@2.39.3",
    "tailwindcss": "https://esm.sh/tailwindcss@3.4.1",
    "autoprefixer": "https://esm.sh/autoprefixer@10.4.17",
    "postcss": "https://esm.sh/postcss@8.4.33"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true
  },
  "fmt": {
    "files": {
      "include": ["src/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "include": ["src/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  }
}
