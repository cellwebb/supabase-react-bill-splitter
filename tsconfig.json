{ 
  "compilerOptions": { 
    "target": "ESNext", 
    "module": "ESNext",
    "lib": ["esnext", "dom"], 
    "strict": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  }, 
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "dist"] 
}
